{
  "name": "ecredit-bun",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start:provider-sim": "bun run --cwd=./provider-sim start",
    "dev": "bun db:migrate && bun db:seed && bun run start:provider-sim & bun run start:frontend & bun run --watch src/server.ts",
    "start:frontend": "bun run --cwd=./frontend start",
    "build": "bun build src/server.ts --target=bun --outdir=dist",
    "start": "NODE_ENV=production bun dist/server.js",
    "start:full": "bun db:migrate && NODE_ENV=production bun run start",
    "worker": "bun run src/infrastructure/jobs/worker.ts",
    "db:migrations:generate": "bun x drizzle-kit generate --config src/infrastructure/db/drizzle.config.ts",
    "db:migrate": "bun run src/infrastructure/db/migrate.ts",
    "db:seed": "bun run src/infrastructure/db/seed.ts"
  },
  "dependencies": {
    "drizzle-orm": "^0.31.2",
    "hono": "^4.4.7",
    "ioredis": "^5.3.2",
    "jose": "^5.1.3",
    "pg": "^8.11.3",
    "pg-boss": "12.11.2",
    "socket.io": "^4.6.1",
    "superagent": "^10.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.16.0",
    "@types/socket.io": "^3.0.2",
    "@types/superagent": "^8.1.9",
    "drizzle-kit": "^0.22.0",
    "eslint": "^9.14.0",
    "typescript": "^5.6.3"
  }
}
