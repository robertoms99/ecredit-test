    "jose": "^5.1.3",
    "drizzle-orm": "^0.31.2"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.22.0",
    "eslint": "^9.14.0",
    "typescript": "^5.6.3"
  }
}
