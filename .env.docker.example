# Docker Compose Environment Variables

# JWT Secret (⚠️ CHANGE IN PRODUCTION)
JWT_SECRET=change-this-secret-in-production-use-a-strong-random-string

# Frontend API URL
# Build-time variable for Vite
VITE_API_URL=http://localhost:3000

# Runtime variable for browser
API_URL=http://localhost:3000

# Database (default values, can be customized)
POSTGRES_DB=ecredit
POSTGRES_USER=ecredit
POSTGRES_PASSWORD=ecredit123
POSTGRES_PORT=5432

# Ports (default values)
BACKEND_PORT=3000
PROVIDER_PORT=3001
FRONTEND_PORT=8080
